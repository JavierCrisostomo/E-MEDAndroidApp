<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="src.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@mipmap/ic_launcher" />

        <src.customfonts.MyTextView_Roboto_Medium
            android:id="@+id/propertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="E-MED"
            android:textColor="#000"
            android:textSize="32dp" />

        <src.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/myTextView_Roboto_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Your digital healthcare platform"
            android:textColor="#b7b8ba"
            android:textSize="12dp" />
    </LinearLayout>

    <src.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignIn"
        android:background="@drawable/signin_rect"
        android:textColor="#ffffff"
        android:text="Sign In"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_gravity="center_horizontal"/>
    <src.customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/qr_rect"
        android:textColor="#2dbcff"
        android:text="Scan QR Code"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:textSize="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:layout_gravity="center_horizontal"/>
    <src.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />




</LinearLayout>
